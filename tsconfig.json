{
    "compilerOptions": {
        "noImplicitAny": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "target": "es5",
        "sourceMap": false,
        "removeComments": true,
    },
    "include": [
        "packages/**/*",
        "expamples/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}